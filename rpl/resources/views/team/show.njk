{% extends 'team' %}

{% block content %}
	

<div class="row">
	<div class="col-md-8 panel-info">

		<div class="content-box-header panel-heading">
			<div class="panel-title ">Team Detail</div>
		</div>

		<div class="content-box-large box-with-header">
			<div class="form-horizontal">
                 
                <div class="form-group">
                    <label class="col-sm-2 control-label">Team Name</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].name}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Country</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].country}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Player 1</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].name1}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Player 2</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].name2}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Player 3Player 4</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].name3}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Player 4</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].name4}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Time</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].time}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Category</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">{{team[0].category.name}}</p>
                    </div>
                </div>


            </div>
            <div class="col-sm-2 control-label">
	            {{ form.open({ route: 'team.edit', params: { id: team[0].id } }) }}
	            	{{ form.button('Update','', { class: 'btn btn-success ',  style:'float:right;'}) }}
		        {{ form.close() }}
		    </div>
		    <div class="form-control-static">
		        {{ form.open({ route: 'team.destroy', params: {id: team[0].id} }) }}
		            {{csrfField}}
		            {{ form.button('Delete','', { class: 'btn btn-danger ' }) }} 
		        {{ form.close() }}
		    </div>
	    </div>
	</div>
	
</div>

	  	
{% endblock %}