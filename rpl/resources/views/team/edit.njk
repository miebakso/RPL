{% extends 'category' %}

{% block content %}
	

<div class="row">
	<div class="col-md-6 panel-warning">

		<div class="content-box-header panel-heading">
			<div class="panel-title ">Update Video</div>
		</div>

		<div class="content-box-large box-with-header">

		        {% if successMessage %}
		            <div class="alert alert-success alert-dismissable">
		                <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
		                <strong>Success!</strong> {{successMessage}}.
		            </div>
		        {% endif %}

		        {% if old('errors') %}
		            <div class="alert alert-danger alert-dismissable">
		                {% for error in old('errors') %}
		                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
		                    <li> {{ error.message }} </li>
		                {% endfor %}
		            </div>
		        {% endif %}

		        {{ form.open({route: 'category.update', params: {id: category.id} }) }}

	        		{{csrfField}}


	                    <div class="form-group ">
	                        {{form.label('name','Category Name') }}
	                        <div>
	                            {{ form.text('name', category.name  ,{ class: 'form-control'})}}
	                        </div>
	                    </div> 

	                    <div class="form-group "> 
                        	{{form.label('','Status') }}
                            <select name="status" class="form-control">
                            	{% if category.status == 0 %}
							  		<option value="0" selected="selected"><p style="color:green">In Progress</p></option>
							  		<option value="1"><p style="color:red">Done</p></option>
							  	{% else %}
								  	<option value="0"><p style="color:green">In Progress</p></option>
								  	<option value="1" selected="selected"><p style="color:red">Done</p></option>
								{% endif %}
							</select>
                        </div>

                        <div class="form-group "> 
                        	{{form.label('','Status') }}
                            <select name="type" class="form-control">
                            	{% if category.type == 0 %}
							  		<option value="0" selected="selected"><p>Individual</p></option>
							  		<option value="1"><p>Team</p></option>
							  	{% else %}
								  	<option value="0"><p>Individual</p></option>
								  	<option value="1" selected="selected"><p>Team</p></option>
								{% endif %}
							</select>
                        </div>

	                    {{ form.submit('Update','submit', { class: 'btn btn-success', style: 'margin-top: 20px'}) }}


	            {{ form.close() }}


	    </div>
	</div>
</div>

	  	
{% endblock %}